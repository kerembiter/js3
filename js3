     <!--öncelikle fonksiyon tanımladık
    //document.getElementById("load1")// burada html içindeki none bölümünü seçer
    .style.display = "block" burada ise block ile seçilen bölümün görünür hale gelmesini sağlar
    none ilede tam tersi yani seçilen öğenin gizlenmesini sağlar -->
    <script>
        function loadMore() {
          document.getElementById("none").style.display = "block";
          document.getElementById("load").style.display = "none";
          document.getElementById("load1").style.display = "block";
        }
        function loadMore1() {
          document.getElementById("none").style.display = "none";
          document.getElementById("load").style.display = "block";
          document.getElementById("load1").style.display = "none";
        }
      </script>
